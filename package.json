{
  "name": "aha-ai",
  "displayName": "Aha AI",
  "description": "Dev Assistant powered by ChatGPT",
  "version": "0.0.1",
  "icon": "media/logo.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  "onStartupFinished",
  "onView:aha-ai.chatView",
  "onCommand:aha-ai.askChatGPT"
],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aha-ai.askChatGPT",
        "title": "Ask ChatGPT about this file"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aha-ai",
          "title": "Aha AI",
          "icon": "media/logo.png"
        }
      ]
    },
    "views": {
      "aha-ai": [
        {
          "id": "aha-ai.chatView",
          "name": "Aha Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "axios": "^1.8.4"
  }
}
